{

  "description": "Transform any webpage into a portable book",
  "manifest_version": 2,
  "name": "PliegOS",
  "version": "1.0",
  "homepage_url": "http://www.pliegos.net/",
  "icons": {
    "48": "icons/logoPliegOMaker_48.png"
  },

  "permissions": [
    "activeTab",
    "*://developer.mozilla.org/*",
    "*://www.pliegos.net/*", 
    "webRequest"
  ],


  "browser_action": {
    "default_icon": "icons/logoPliegOMaker_32.png",
    "theme_icons": [{
        "light": "icons/logoPliegOMaker_32.png",
        "dark": "icons/logoPliegOMaker_32.png",
        "size": 32
    }],
    "default_title": "PliegOS",
    "default_popup": "popup/popup.html"
  },

  "web_accessible_resources": [
  ]
}
